<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/arkaplann">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="80dp"
            android:layout_marginBottom="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="BAŞ AĞRISI GÜNLÜĞÜ"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/basliktxt" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="AĞRI EKLE"
            android:textColor="@color/siyah"
            android:background="@color/buton"
            android:layout_marginTop="20dp"
            android:id="@+id/agriekle_btn" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="KAYITLAR"
            android:layout_marginTop="20dp"
            android:background="@color/buton"
            android:textColor="@color/siyah"
            android:id="@+id/kayit_btn" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>